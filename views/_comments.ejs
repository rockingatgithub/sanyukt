<li id="comment-<%= comment._id %>" class="list-group-item">
    <p>
        <%if(locals.user && locals.user.id === comment.user.id){%>
        <small>
            <a
                class="delete-comment-button"
                href="/comments/destroy/<%= comment.id%>"
                ><img src="/images/trash.svg" height="15px" width="15px"
            /></a>
        </small>
        <%}%> <%= comment.content%>
        <small>
            <%= comment.user.name%>
        </small>

        <!-- dispaly the likes of this comment, if user is logged in show links and if not just show the number..-->
        <small>
            <%if (locals.user){%>
            <div class="likeOptions">
                <a
                    class="toggle-like-button"
                    data-likes="<%= comment.userReactionMap.get('like') %>"
                    href="/likes/toggle/?id=<%= comment._id%>&type=Comment&reaction=like"
                >
                    <span class="emojis-post">
                        <%= comment.userReactionMap.get('like') %> 👍</span
                    >
                </a>
                <a
                    class="toggle-like-button"
                    data-likes="<%= comment.userReactionMap.get('love') %>"
                    href="/likes/toggle/?id=<%= comment._id%>&type=Comment&reaction=love"
                >
                    <span class="emojis-post">
                        <%= comment.userReactionMap.get('love') %> ❤️</span
                    >
                </a>
                <a
                    class="toggle-like-button"
                    data-likes="<%= comment.userReactionMap.get('haha') %>"
                    href="/likes/toggle/?id=<%= comment._id%>&type=Comment&reaction=haha"
                >
                    <span class="emojis-post">
                        <%= comment.userReactionMap.get('haha') %> 😆</span
                    >
                </a>
                <a
                    class="toggle-like-button"
                    data-likes="<%= comment.userReactionMap.get('anger') %>"
                    href="/likes/toggle/?id=<%= comment._id%>&type=Comment&reaction=anger"
                >
                    <span class="emojis-post">
                        <%= comment.userReactionMap.get('anger') %> 😡</span
                    >
                </a>
                <a
                    class="toggle-like-button"
                    data-likes="<%= comment.userReactionMap.get('sad') %>"
                    href="/likes/toggle/?id=<%= comment._id%>&type=Comment&reaction=sad"
                >
                    <span class="emojis-post">
                        <%= comment.userReactionMap.get('sad') %> ☹️</span
                    >
                </a>
            </div>
            <%}else{%> <%= comment.likes.length %>
            <span class="emojis-comment">👍</span>
            <%}%>
        </small>
    </p>
</li>
